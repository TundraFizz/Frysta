{
  "name": "frysta",
  "version": "0.1.0",
  "author": "Tundra Fizz",
  "description": "Desktop application to capture screenshots and send them to a server",
  "main": "src/app.js",
  "dependencies": {
    "electron-compile": "^6.4.2",
    "electron-json-storage": "latest",
    "electron-squirrel-startup": "^1.0.0",
    "form-data": "latest",
    "jquery": "latest",
    "nan": "latest",
    "request": "^2.85.0"
  },
  "devDependencies": {
    "electron": "latest",
    "electron-rebuild": "latest",
    "electron-builder": "latest",
    "electron-forge": "^5.1.1",
    "electron-prebuilt-compile": "1.8.4"
  },
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "step1": "node-gyp clean",
    "step2": "node-gyp configure",
    "step3": "electron-rebuild",
    "step4": "electron ./src/app.js",
    "reeee": "cls && npm run step1 && npm run step2 && npm run step3 && npm run step4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TundraFizz/Frysta"
  },
  "license": "ISC",
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "squirrel"
        ],
        "darwin": [
          "zip"
        ],
        "linux": [
          "deb",
          "rpm"
        ]
      },
      "electronPackagerConfig": {
        "packageManager": "npm"
      },
      "electronWinstallerConfig": {
        "name": "my_app_sample_thing"
      },
      "electronInstallerDebian": {},
      "electronInstallerRedhat": {},
      "github_repository": {
        "owner": "",
        "name": ""
      },
      "windowsStoreConfig": {
        "packageName": "",
        "name": "myappthingsample"
      }
    }
  }
}
