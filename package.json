{
  "name": "frysta",
  "version": "0.1.0",
  "author": "Tundra Fizz",
  "description": "Desktop application to capture screenshots and send them to a server",
  "main": "binding.gyp",
  "dependencies": {
    "electron-json-storage": "latest",
    "form-data": "latest",
    "jquery": "latest",
    "nan": "latest"
  },
  "devDependencies": {
    "electron": "latest",
    "electron-rebuild": "latest",
    "electron-builder": "latest"
  },
  "scripts": {
    "all": "cls && npm run clean && npm run compile && npm start",
    "clean": "node-gyp clean",
    "compile": "electron-rebuild",
    "start": "electron ./src/app.js",

    "postinstall": "electron-builder install-app-deps",
    "pack": "build --dir",
    "dist": "build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TundraFizz/Frysta"
  },
  "gypfile": true,
  "license": "ISC",

  "build": {
    "appId": "yourappid",
    "nodeGypRebuild": "true",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "src/img/icon.ico"
    }
  }
}
